@using IT_Heaven.Models.Models.ViewModels;
@using IT_Heaven.Resources.Helpers;
@model HomeViewModel

<div class="container-fluid body-content">
    <div class="row">
          @Html.Partial("_HomeNavigation")
        <div class="col-md-10 col-sm-9 col-md-offset-2 col-sm-offset-3">
            <br />
            @if (ViewBag.Bagged)
            {
                <div class="@ViewBag.MessageClass" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @ViewBag.Message
                </div>
                <br />
            }       
            <div>
                <!-- Banner image -->
            </div>
           
                <div class="row">
                    <div class="col-md-10 col-sm-9 col-md-offset-1">
                        <h4>Newly-added articles</h4>
                        <div class="scroll-container">
                            @if (Model.RecentlyAdded != null)
                            {
                                foreach (var item in Model.RecentlyAdded)
                                {
                                    @Html.ArticlePanel(item)
                                }
                            }
                        </div>
                    </div>
                </div>
              
            </div>
    </div>

</div>


