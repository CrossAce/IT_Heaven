@using IT_Heaven.Models.Models.ViewModels
@using IT_Heaven.Resources.Helpers;
@model CategoryArticleViewModel
@{
    ViewBag.Title = "Articles";
}

<div class="container-fluid body-content">
    <div class="row">
        <div class="col-md-2 col-sm-3" id="pills-modify">
            @using (Html.BeginForm("SingleCategory", "Categories", FormMethod.Post, new { @class = "form-horizontal-override", role = "form" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.SortBar.Search, new { @class = "col-md-4 control-label-override" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SortBar.Search, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SortBar.SortBy,"Sort by:", new { @class = "control-label-override col-md-4" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SortBar.SortBy,
                    new SelectList(Model.SortBar.SortByValues),
                    new { @class = "btn btn-info col-sm-12" })
                    </div>
                </div>
                if (Model.SortBar.TypeDropDownValues != null && Model.SortBar.TypeDropDownValues.Count() != 0)
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.SortBar.Type,"Sort by type:", new { @class = "control-label-override col-md-5" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SortBar.Type,
                    new SelectList(Model.SortBar.TypeDropDownValues),
                    new { @class = "btn btn-info col-sm-12" })
                        </div>
                    </div>
                }
              
              
                <div class="form-group">
                    @Html.LabelFor(m => m.SortBar.PriceLimitationFrom, "Price from",new { @class = "col-md-5 control-label-override" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SortBar.PriceLimitationFrom, "0", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SortBar.PriceLimitationTo,"Price to",new { @class = "col-md-4 control-label-override" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SortBar.PriceLimitationTo, "15000", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" class="btn btn-green" value="Go" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-10 col-sm-9 col-md-offset-2 col-sm-offset-3 ">
            <div class="inner-container">
                @if (Model.PreviewModels != null && Model.PreviewModels.Count() > 0)
                {
                    foreach (var item in Model.PreviewModels)
                    {
                        <div class="article-container">
                            @Html.ArticlePanel(item)
                        </div>

                    }
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        <p>
                            Oops...There aren't any items in this category!
                        </p>
                    </div>
                }
            </div>


        </div>
    </div>

</div>
