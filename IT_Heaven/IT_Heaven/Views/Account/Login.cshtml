@using IT_Heaven.Models
@model LoginViewModel

<div class="container-fluid body-content color-lightgray">
    <div class="row">
        <div class="col-md-3">
            <img src="https://s-media-cache-ak0.pinimg.com/564x/fb/f1/1f/fbf11f3810f6253a4ae56a57fc3d6903.jpg" alt="" id="left-add" />
        </div>
        <div class="col-md-6">
            <h4>Use a local account to log in.</h4>
            <hr />
            <div class="Form center" id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal-override", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label-override" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label-override" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9">
                            <div class="checkbox" id="checkbox-override">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @id = "checkbox-box-override"})
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-green" />
                        </div>
                    </div>


                }
            </div>
        </div>
        <div class="col-md-3">
            <img src="https://s-media-cache-ak0.pinimg.com/564x/fb/f1/1f/fbf11f3810f6253a4ae56a57fc3d6903.jpg" alt="" id="right-add" />
        </div>

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}